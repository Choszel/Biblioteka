@model Biblioteka.Models.Rental

@{
    ViewData["Title"] = "Details";
}

<h1>Informacje o wypożyczeniu</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.rentalDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.rentalDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.rentalState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.rentalState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PESEL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PESEL)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.user)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.email)
        </dd>
        <dt class = "col-sm-2">
            Książki
        </dt>
        <dd class = "col-sm-10">

            @if (Model.RentalBook != null)
                {
                @string.Join(", ", Model.RentalBook.Select(rb => rb.book.title))
                }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.rentalId" class="customButton">Edytuj</a> |
    <a asp-action="Index" class="customButton">Powrót do listy</a>
</div>
