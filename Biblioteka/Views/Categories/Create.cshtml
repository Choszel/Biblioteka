@model Biblioteka.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj kategorię</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="catName" class="control-label"></label>
                <input asp-for="catName" class="form-control" />
                <span asp-validation-for="catName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Dodaj" class="customButton btn btn-primary" />
                <a asp-action="Index" class="customButton">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
