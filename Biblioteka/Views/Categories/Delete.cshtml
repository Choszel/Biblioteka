@model Biblioteka.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń kategorię</h1>

<h3>Czy jesteś pewien że chcesz usunąć ten rekord?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.catName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.catName)
        </dd>
